@page
@model CRUD.Pages.Customers.Delete
@{
    ViewData["Title"] = "Delete";
}

<div class="mx-auto rounded border p-4" style="width: 400px;">
    <h2 class="text-center mb-3">
        Delete Customer
    </h2>
    <hr/>
    <p class="text-center">Are you sure want to delete this customer?</p>
    <p class="text-center">Customer ID = @Request.Query["id"]</p>
    <hr/>
    <form method="post">
        <div class="row">
            <div class="offset-sm-1 col-sm-4 d-grid">
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
            <div class="offset-sm-2 col-sm-4 d-grid">
                <button class="btn btn-outline-primary" href="/customers/index">Cancel</button>
            </div>
        </div>
    </form>
</div>